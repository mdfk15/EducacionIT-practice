print(f"\nProfe metode")

def ingreso_valores(dato):
	return int(input(f"Ingrese {dato}: "))

def calculo_velocidad(d,t):
	return d/t

def imprimir(v):
	print(f"La velocidad promedio es {v} kms/hs")

distancia = ingreso_valores("distancia")
tiempo = ingreso_valores("tiempo")
velocidad = calculo_velocidad(distancia,tiempo)
imprimir(velocidad)

